---
  env:
    browser: true
    node: true
    jest: true
  parser: babel-eslint
  extends:
    - airbnb
  rules:
    arrow-body-style: 1
    array-callback-return: 1
    arrow-spacing: 1
    arrow-parens: 1
    block-spacing: 0
    brace-style: 1
    camelcase: 0
    comma-dangle: 0
    comma-spacing: 0
    consistent-return: 0
    curly: 1
    default-case: 0
    dot-notation: 1
    eqeqeq: 0
    func-names: 0
    guard-for-in: 1
    import/extensions: 0
    import/imports-first: 1
    import/no-named-as-default: 1
    import/no-named-as-default-member: 1
    indent: 0
    jsx-a11y/anchor-has-content: 1
    jsx-a11y/href-no-hash: 1
    jsx-a11y/img-has-alt: 1
    jsx-a11y/label-has-for: 1
    jsx-a11y/no-static-element-interactions: 1
    jsx-quotes: 0
    key-spacing: 0
    keyword-spacing: 0
    max-len: 0
    new-cap: 1
    no-case-declarations: 0
    no-confusing-arrow: 1
    no-else-return: 0
    no-fallthrough: 1
    no-lonely-if: 1
    no-mixed-operators: 1
    no-multi-spaces: 0
    no-nested-ternary: 0
    no-param-reassign: 1
    no-plusplus: 1
    no-redeclare: 1
    no-return-assign: 1
    no-restricted-syntax: 1
    no-script-url: 1
    no-shadow: 0
    no-undef-init: 1
    no-underscore-dangle: 1
    no-unreachable: 1
    no-unused-expressions:
      - 1
      - allowTernary: true
        allowShortCircuit: true
    no-unused-vars: 0
    no-useless-concat: 1
    no-useless-escape: 0
    no-useless-return: 1
    no-use-before-define: 0
    no-var: 0
    object-curly-spacing: 0
    object-property-newline: 1
    object-shorthand: 0
    one-var: 1
    one-var-declaration-per-line: 1
    operator-assignment: 0
    prefer-arrow-callback: 1
    padded-blocks: 0
    prefer-const: 1
    prefer-rest-params: 1
    prefer-spread: 1
    prefer-template: 0
    quotes: 0
    quote-props: 1
    react/forbid-prop-types: 1
    react/jsx-boolean-value: 1
    react/jsx-closing-bracket-location: 1
    react/jsx-curly-spacing: 1
    react/jsx-equals-spacing: 1
    react/jsx-first-prop-new-line: 1
    react/jsx-indent: 1
    react/jsx-indent-props: 1
    react/jsx-space-before-closing: 1
    react/jsx-no-bind: 1
    react/jsx-no-target-blank: 1
    react/jsx-no-undef: 1
    react/jsx-wrap-multilines: 1
    react/no-find-dom-node: 1
    react/no-is-mounted: 1
    react/no-multi-comp: 1
    react/no-string-refs: 1
    react/no-unescaped-entities: 1
    react/no-unused-prop-types: 1
    # Until mobile web is dead (which shares some code with the store), we
    # want to avoid using es6 classes for React components since its on an
    # older version of React and risks breakage.
    react/prefer-es6-class: 0
    react/prefer-stateless-function: 0
    react/prop-types: 1
    react/self-closing-comp: 1
    react/sort-comp: 1
    semi: 0
    semi-spacing: 1
    space-before-blocks: 1
    space-before-function-paren: 0
    space-infix-ops: 1
    space-in-parens: 0
    vars-on-top: 0
  globals:
    _: true
    $: true
    analytics: true
    Backbone: true
    Bloodhound: true
    Clipboard: true
    classNames: true
    FB: true
    gon: true
    google: true
    ICAnalytics: true
    ICStore: true
    ICGuest: true
    moment: true
    Promise: true
    React: true
    ReactDOM: true
    ReactModal: true
    Rollbar: true
    store: true
    Stripe: true
  settings:
    import/resolver:
      webpack:
        config: 'config/webpack/webpack.config.js'

